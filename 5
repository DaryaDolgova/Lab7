#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_CTYPE, "Russian");
int n,a,b,c,x;
cout<<"Число "; cin>>n;
a=n%10; cout<<a<<endl;
b=(n%100-a)/10; cout<<b<<endl;
c=(n%1000-b*10-a)/100; cout<<c<<endl;
x=(n/1000); cout<<x<<endl;
if (a==x&&b==c) {cout<<"Данное число читается одинаково слева направо и справа налево"<<endl;}
else {cout<<"Условие не выполняется"<<endl;}

return 0;
}

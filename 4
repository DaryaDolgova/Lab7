#include <iostream>

using namespace std;

int main()
{
        setlocale(LC_CTYPE, "Russian");
    
int n,a,b,c;
cout<<"Число "; cin>>n;
a=n%10;
n=n/10;
b=n%10;
c=n/10;
if ((c<b&&b<a)||(c>b&&b>a)) {cout<<"Цифры данного числа образуют возрастающую или убывающую последовательность"<<endl;}
else {cout<<"Условие не выполняется"<<endl;}

return 0;
}

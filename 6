#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_CTYPE, "Russian");
int a,b,c;
cout<<"a= "; cin>>a;
cout<<"b= "; cin>>b;
cout<<"c= "; cin>>c;

if ((a*a+b*b==c*c)||(c*c+b*b==a*a)||(a*a+c*c==b*b)) {cout<<"Треугольник со сторонами a, b, c является прямоугольным"<<endl;}
else {cout<<"Условие не выполняется"<<endl;}

return 0;
}
